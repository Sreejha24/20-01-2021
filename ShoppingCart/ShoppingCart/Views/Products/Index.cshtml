@model IEnumerable<ShoppingCart.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<body style="background-color:burlywood">
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <form method="get" asp-action="Index">
        <p>
            <input type="search" placeholder="Search Here" value="@ViewData["GetProductDetails"]" name="ProductSearch" style="width:500px;" />
            <input type="submit" value="search" class="btn btn-primary" />|
            <a asp-action="Index" class="btn btn-outline-success">Get all Product details</a>
        </p>
    </form>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProductName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductQuantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FileImage)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductQuantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductPrice)
                    </td>
                    <td>
                        <img style=" height:100px; width:150px;" src="~/Images/@item.FileImage" alt="@item.ProductName" />

                        @if (item.ProductQuantity == 0)
                        {
                            <p style="font-family:'Times New Roman', Times, serif;font-weight:300;color:red">Out of Stock!!!!!</p>
                        }
                        else
                        {
                            <p style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; font-weight:20px; color:dodgerblue">
                                Only

                                @Html.DisplayFor(modelItem => item.ProductQuantity)

                                Are Left!!!


                            </p>
                        }
                    </td>


                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-primary" value="Edit">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-success" value="Details">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-outline-danger" value="Delete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</body>
